/* pages/song/song.wxss */
page {
  background-color: #000;
}
.search {
  width: 90%;
  margin-bottom: 10px;
}
.container {
  margin: 0 auto;
  color: #fff;
  height: auto;
  margin-top: 40px;
}
.songs {
  overflow: hidden;
  position: relative;
}
.songs .title {
  padding: 5px 16px;
  font-size: 15px;
  font-weight: 700;
  position: relative;
}
.songs .title::after {
  content: " ";
    position: absolute;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    transform-origin: 0 100%;
    transform: scaleY(0.5);
    left: 15px;
}
.songs .list .item {
  display: flex;
  align-items: center;
  padding: 5px 16px;
  position: relative;
}
.songs .list .item image {
  width: 80px;
  height: 80px;
}
.songs .list .item .img {
  margin-right: 16px;
  width: 80px;
  height: 80px;
  line-height: 80px;
  text-align: center;
}
.songs .list .item .desc {
  flex: 1;
  min-width: 0;
}
.songs .list .item .desc .desc-title {
  font-weight: 400;
  font-size: 14px;
  height: 24px;
  line-height: 24px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.songs .list .item .desc .desc-detail {
  font-size: 14px;
  line-height: 1.4;
  padding-top: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
}