/* pages/gallery/wallpaper/wallpaper.wxss */
page {
  background-color: #000;
}
.container {
  color: #fff;
}
.weui-grids {
  width: 100%;
  position: relative;
  overflow: hidden;
}
.weui-grids:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0,0,0,0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.weui-grid {
  position: relative;
  float: left;
  padding: 4px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
}
.weui-grid .item {
  float: left;
  width: 100%;
  height: 100px;
  border-radius: 5px;
  margin-bottom: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.weui-grid .item .head {
  font-size: 15px;
  font-weight: 800;
}
.weui-grid image {
  width: 100%;
  height: 100%;
}
.weui-grid:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 1px solid rgba(0,0,0,0.1);
  transform-origin: 100% 0;
  transform: scaleX(0.5);
}
.weui-grid:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.weui-grid__icon {
  width: 28px;
  height: 28px;
  margin: 0 auto;
}
.weui-grid__label {
  display: block;
  text-align: center;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}