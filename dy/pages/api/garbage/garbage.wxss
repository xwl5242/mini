page {
  background: #000;
}
.container {
  color: #fff;
  width: 90vw;
  margin: 20px auto;
  font-size: 14px;
}
.container .model {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .model input {
  flex: 3;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 5px;
  border: solid 1px #eee;
}
.container .model .btn {
  flex: 1;
  text-align: right;
}
.container .model .btn text {
  color: #FFE28A;
  background: #333;
  padding: 5px 15px;
  border-radius: 5px;
}
.container .result {
  width: 100%;
  margin: 25px auto;
}