/* pages/components/search.wxss */
.search {
  width: 100%;
  color: #fff;
  margin-bottom: 20px;
}
.search-input {
  width: 77%;
  float: left;
  background: #F3F3F3;
  height: 40px;
  line-height: 40px;
  display: flex;
  justify-content: left;
  align-items: center;
  margin-right: 3%;
  border-radius: 8px;
}
.search-input-item {
  margin-left: 15px;
  color: #000;
  font-size: 16px;
}
.search-btn {
  width: 20%;
  float: left;
  height: 40px;
  font-size: 15px;
  font-weight: 600;
  line-height: 40px;
  background: #FFE834;
  border-radius: 8px;
}
.search-btn-label {
  text-align: center;
  color: #000;
}
.input-placeholder {
  margin-left: 2px;
  font-size: 14px;
}