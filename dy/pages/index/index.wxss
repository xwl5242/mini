/**index.wxss**/
page {
    background-color: #000;
}
.container {
    margin-top: 40px;
}
.logo,
.tools {
    width: 90%;
    color: #fff;
    margin-bottom: 20px;
}
.logo {
    height: auto;
}
.search {
    width: 90%;
    margin-bottom: 10px;
}
.title {
    width: 90%;
    height: 30px;
    line-height: 30px;
    font-size: 18px;
    color: #E64340;
}
.logo image {
    width: 100%;
    border-radius: 5px;
}
.tools .item {
    float: left;
    width: 48%;
    height: 100px;
    border-radius: 5px;
    margin-bottom: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(90deg,#FC6903, #FB301F, #FD053A,#FC6903, #FB301F, #FD053A, #FC6903);
    background-size: 400%;
    animation: animate 8s linear infinite alternate;
}
